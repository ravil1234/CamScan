<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_corner_radius"

    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/colorPrimary"
            android:text="Share as "
            android:paddingTop="8sp"
            android:paddingBottom="8dp"
            android:paddingStart="16dp"
            android:layout_marginStart="16dp"
             />
        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/cross"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="24dp"
            android:onClick="shareClose"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:background="#fff"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:onClick="shareAsPdf"
            >
            <ImageView
                android:id="@+id/frag_shareas_icon1"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:padding="12dp"
                android:src="@drawable/pdf_white"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/circular_blue"
                />
            <TextView
                android:id="@+id/frag_shareas_name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PDF"
                android:layout_gravity="center_horizontal"
                android:textColor="#000"
                android:textSize="@dimen/_12sdp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:onClick="shareAsSecuredPdf"
            >
            <ImageView
                android:id="@+id/frag_shareas_icon4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="12dp"
                android:src="@drawable/pdf_lock"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/circular_blue"
                />
            <TextView
                android:id="@+id/frag_shareas_name4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Secured PDF"
                android:layout_gravity="center_horizontal"
                android:textColor="#000"
                android:textSize="@dimen/_12sdp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:onClick="shareAsImages"
            >
            <ImageView
                android:id="@+id/frag_shareas_icon2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="12dp"
                android:background="@drawable/circular_blue"
                android:src="@drawable/ic_panorama_white_24dp"
                android:layout_gravity="center_horizontal"
                />
            <TextView
                android:id="@+id/frag_shareas_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Image"
                android:layout_gravity="center_horizontal"
                android:textColor="#000"
                android:textSize="@dimen/_12sdp"
                />

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:background="#fff"
        >
        <LinearLayout
            android:id="@+id/in_doc_share_frag_long"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:onClick="shareAsLongimage"
            >
            <ImageView
                android:id="@+id/frag_shareas_icon3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="12dp"
                android:background="@drawable/circular_blue"
                android:src="@drawable/long_img_icon"
                android:layout_gravity="center_horizontal"
                />
            <TextView
                android:id="@+id/frag_shareas_name3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Long image"
                android:layout_gravity="center_horizontal"
                android:textColor="#000"
                android:textSize="@dimen/_12sdp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            >


        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            >


        </LinearLayout>

    </LinearLayout>


</LinearLayout>