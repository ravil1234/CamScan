<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#fff"
        android:background="@color/colorPrimary"
        android:text="Share as "
        android:paddingTop="8sp"
        android:paddingBottom="8dp"
        android:paddingStart="16dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:background="#fff"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:onClick="shareAsPdf"
            >
            <ImageView
                android:id="@+id/frag_shareas_icon1"
                android:layout_width="34sp"
                android:layout_height="34sp"
                android:layout_margin="8dp"
                android:src="@drawable/pdf_black"
                android:layout_gravity="center_horizontal"
                />
            <TextView
                android:id="@+id/frag_shareas_name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PDF"
                android:layout_gravity="center_horizontal"
                android:textColor="#000"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:onClick="shareAsSecuredPdf"
            >
            <ImageView
                android:id="@+id/frag_shareas_icon4"
                android:layout_width="34sp"
                android:layout_height="34sp"
                android:layout_margin="8dp"
                android:src="@drawable/pdf_lock"
                android:layout_gravity="center_horizontal"
                />
            <TextView
                android:id="@+id/frag_shareas_name4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Secured PDF"
                android:layout_gravity="center_horizontal"
                android:textColor="#000"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:onClick="shareAsImages"
            >
            <ImageView
                android:id="@+id/frag_shareas_icon2"
                android:layout_width="34sp"
                android:layout_height="34sp"
                android:layout_margin="8dp"
                android:src="@drawable/image"
                android:layout_gravity="center_horizontal"
                />
            <TextView
                android:id="@+id/frag_shareas_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Image"
                android:layout_gravity="center_horizontal"
                android:textColor="#000"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/in_doc_share_frag_long"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:onClick="shareAsLongimage"
            >
            <ImageView
                android:id="@+id/frag_shareas_icon3"
                android:layout_width="34sp"
                android:layout_height="34sp"
                android:layout_margin="8dp"
                android:src="@drawable/long_img_icon"
                android:layout_gravity="center_horizontal"
                />
            <TextView
                android:id="@+id/frag_shareas_name3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Long image"
                android:layout_gravity="center_horizontal"
                android:textColor="#000"
                />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>