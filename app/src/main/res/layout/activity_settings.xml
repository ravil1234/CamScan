<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".Activities.SettingsActivity">

    <TextView
        android:id="@+id/general_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="General"
        android:textSize="@dimen/_16sdp"
        android:layout_margin="16dp"
        android:fontFamily="@font/font_semibold"
        android:textColor="@color/colorAppBar">
    </TextView>
    <RelativeLayout
        android:foreground="@drawable/foreground_list_items"
        android:id="@+id/relative_theme"

        android:layout_below="@id/general_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/app_theme"
        android:layout_width="24dp"
        android:layout_marginLeft="16dp"
        android:layout_centerVertical="true"
        android:layout_height="24dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:src="@drawable/theme">
    </ImageView>
        <TextView
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@id/app_theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_12sdp"
            android:layout_centerVertical="true"
            android:fontFamily="@font/font_regular"
            android:textStyle="bold"
            android:text="App Theme"
            android:textColor="#000000"
            >
        </TextView>
    </RelativeLayout>
    <View
        android:id="@+id/view1"
        android:layout_marginLeft="28dp"
        android:layout_below="@id/relative_theme"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginRight="28dp"
        android:background="#f8f8f8">
    </View>
    <RelativeLayout
        android:id="@+id/relative_default_activity"
        android:foreground="@drawable/foreground_list_items"
        android:layout_below="@id/view1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/default_activity_img"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_width="24dp"
            android:layout_centerVertical="true"
            android:layout_height="24dp"
            android:src="@drawable/smartphone">
        </ImageView>
        <TextView
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@id/default_activity_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_12sdp"
            android:layout_centerVertical="true"
            android:fontFamily="@font/font_regular"
            android:textStyle="bold"
            android:text="Default Activity"
            android:textColor="#000000"
            >
        </TextView>
    </RelativeLayout>
    <View
        android:id="@+id/view2"
        android:layout_marginLeft="28dp"
        android:layout_below="@id/relative_default_activity"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginRight="28dp"
        android:background="#f8f8f8">
    </View>
    <RelativeLayout
        android:id="@+id/relative_view_activity"
        android:foreground="@drawable/foreground_list_items"
        android:layout_below="@id/view2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/default_view_img"
            android:layout_width="24dp"
            android:layout_marginLeft="16dp"
            android:layout_centerVertical="true"
            android:layout_height="24dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:src="@drawable/default_view">
        </ImageView>
        <TextView
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@id/default_view_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_12sdp"
            android:layout_centerVertical="true"
            android:fontFamily="@font/font_regular"
            android:textStyle="bold"
            android:text="Default View of Documents"
            android:textColor="#000000"
            >
        </TextView>
    </RelativeLayout>
    <View
        android:id="@+id/view3"
        android:layout_marginLeft="28dp"
        android:layout_below="@id/relative_view_activity"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginRight="28dp"
        android:background="#f8f8f8">
    </View>
    <TextView
        android:layout_below="@id/view3"
        android:id="@+id/preference_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Preferences"
        android:textSize="@dimen/_16sdp"
        android:layout_margin="16dp"
        android:fontFamily="@font/font_semibold"
        android:textColor="@color/colorAppBar">
    </TextView>
    <RelativeLayout
        android:id="@+id/relative_filter"
        android:foreground="@drawable/foreground_list_items"
        android:layout_below="@id/preference_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/doc_filter"
            android:layout_marginLeft="16dp"
            android:layout_width="24dp"
            android:layout_centerVertical="true"
            android:layout_height="24dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:src="@drawable/filter">
        </ImageView>
        <TextView
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@id/doc_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_12sdp"
            android:layout_centerVertical="true"
            android:fontFamily="@font/font_regular"
            android:textStyle="bold"
            android:text="Default Filter"
            android:textColor="#000000"
            >
        </TextView>
    </RelativeLayout>
    <View
        android:id="@+id/view4"
        android:layout_marginLeft="28dp"
        android:layout_below="@id/relative_filter"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginRight="28dp"
        android:background="#f8f8f8">
    </View>
    <RelativeLayout
        android:id="@+id/relative_pdf"
        android:layout_below="@id/view4"
        android:foreground="@drawable/foreground_list_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/default_pdf_settings"
            android:layout_width="24dp"
            android:layout_centerVertical="true"
            android:layout_height="24dp"
            android:layout_marginLeft="16dp"
            android:src="@drawable/pdf_setting"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp">
        </ImageView>
        <TextView
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@id/default_pdf_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_12sdp"
            android:layout_centerVertical="true"
            android:fontFamily="@font/font_regular"
            android:textStyle="bold"
            android:text="Pdf Settings"
            android:textColor="#000000"
            >
        </TextView>
    </RelativeLayout>
    <View
        android:id="@+id/view5"
        android:layout_marginLeft="28dp"
        android:layout_below="@id/relative_pdf"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginRight="28dp"
        android:background="#f8f8f8">
    </View>
    <RelativeLayout
        android:id="@+id/relative_doc_name"
        android:layout_below="@id/view5"
        android:foreground="@drawable/foreground_list_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/default_doc_name"
            android:layout_width="24dp"
            android:layout_centerVertical="true"
            android:layout_height="24dp"
            android:src="@drawable/document_name"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="16dp">
        </ImageView>
        <TextView
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@id/default_doc_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_12sdp"
            android:layout_centerVertical="true"
            android:fontFamily="@font/font_regular"
            android:textStyle="bold"
            android:text="Document Name"
            android:textColor="#000000"
            >
        </TextView>
    </RelativeLayout>
    <View
        android:id="@+id/view6"
        android:layout_marginLeft="28dp"
        android:layout_below="@id/relative_doc_name"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginRight="28dp"
        android:background="#f8f8f8">
    </View>
</RelativeLayout>