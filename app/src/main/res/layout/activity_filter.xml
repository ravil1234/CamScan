<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.FilterActivity"
    android:background="#fff"
    >


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="25sp"
        android:layout_marginEnd="25sp"
        android:layout_marginBottom="121dp"
        android:layout_marginTop="25sp"
        >
        <ImageView
            android:id="@+id/filter_img_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/pbar_back"
            />
        <ProgressBar
            android:id="@+id/filter_prog_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            />


    </FrameLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:orientation="vertical"
        >
        <LinearLayout
            android:id="@+id/filter_adjust"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="bottom"
            android:background="#C900BCD4"
            android:visibility="gone"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:background="#E400BCD4"

                >
                <TextView
                    android:id="@+id/filter_adjust_prop_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Property :"
                    android:textColor="#fff"
                    android:layout_gravity="center_vertical"

                    />
                <TextView
                    android:id="@+id/filter_adjust_prop_val"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Value"
                    android:textColor="#fff"
                    android:layout_gravity="center_vertical"
                    />
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/filter_adjust_reset_cont"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_settings_backup_restore_black_24dp"
                        android:layout_gravity="center_horizontal"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reset"
                        android:textColor="#fff"
                        />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_brightness_6_black_24dp"
                        android:layout_gravity="center_horizontal"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Brightness"
                        android:textColor="#fff"
                        android:layout_gravity="center_horizontal"
                        />
                </LinearLayout>
                <SeekBar
                    android:id="@+id/filter_adjust_seek_bright"
                    android:progress="50"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="16dp"
                    android:thumb="@android:drawable/ic_notification_overlay"

                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/contrast"
                        android:layout_gravity="center_horizontal"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contrast"
                        android:textColor="#fff"
                        android:layout_gravity="center_horizontal"
                        />
                </LinearLayout>
                <SeekBar
                    android:id="@+id/filter_adjust_seek_contrast"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:progress="50"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="16dp"
                    android:thumb="@android:drawable/ic_notification_overlay"

                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/exposure"
                        android:layout_gravity="center_horizontal"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Exposure"
                        android:textColor="#fff"
                        android:layout_gravity="center_horizontal"
                        />
                </LinearLayout>
                <SeekBar
                    android:id="@+id/filter_adjust_seek_exposure"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:progress="0"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="16dp"
                    android:thumb="@android:drawable/ic_notification_overlay"

                    />

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/filter_effect_fragment"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            android:background="#BC00BCD4"
            android:visibility="gone"
            >
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                >
                <ImageView
                    android:id="@+id/filter_effect_1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/original"
                    android:layout_centerInParent="true"
                    android:scaleType="centerCrop"
                    android:padding="2dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/filter_effect_1"
                    android:text="Original"
                    android:textColor="#fff"
                    android:layout_marginTop="8dp"
                    android:layout_centerHorizontal="true"
                    android:textSize="8sp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                >
                <ImageView
                    android:id="@+id/filter_effect_2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/luminous"
                    android:layout_centerInParent="true"
                    android:scaleType="centerCrop"
                    android:padding="2dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/filter_effect_2"
                    android:text="Luminous"
                    android:textColor="#fff"
                    android:layout_marginTop="8dp"
                    android:layout_centerHorizontal="true"
                    android:textSize="8sp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                >
                <ImageView
                    android:id="@+id/filter_effect_3"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/correction"
                    android:layout_centerInParent="true"
                    android:scaleType="centerCrop"
                    android:padding="2dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/filter_effect_3"
                    android:text="Corrected"
                    android:textColor="#fff"
                    android:layout_marginTop="8dp"
                    android:layout_centerHorizontal="true"
                    android:textSize="8sp"
                    />

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                >
                <ImageView
                    android:id="@+id/filter_effect_4"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/grayscale"
                    android:layout_centerInParent="true"
                    android:scaleType="centerCrop"
                    android:padding="2dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/filter_effect_4"
                    android:text="GrayScale"
                    android:textColor="#fff"
                    android:layout_marginTop="8dp"
                    android:layout_centerHorizontal="true"
                    android:textSize="8sp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                >
                <ImageView
                    android:id="@+id/filter_effect_5"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/b_w"
                    android:layout_centerInParent="true"
                    android:scaleType="centerCrop"
                    android:padding="2dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/filter_effect_5"
                    android:text="B/W"
                    android:textColor="#fff"
                    android:layout_marginTop="8dp"
                    android:layout_centerHorizontal="true"
                    android:textSize="8sp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                >
                <ImageView
                    android:id="@+id/filter_effect_6"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/invert"
                    android:layout_centerInParent="true"
                    android:scaleType="centerCrop"
                    android:padding="2dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/filter_effect_6"
                    android:text="Invert"
                    android:textColor="#fff"
                    android:layout_marginTop="8dp"
                    android:layout_centerHorizontal="true"
                    android:textSize="8sp"
                    />
            </RelativeLayout>


        </LinearLayout>
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/filter_navigation"
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:layout_gravity="start|bottom"
            app:menu="@menu/filter_menu"
            app:labelVisibilityMode="labeled"
            android:background="@color/colorPrimaryDark"
            />

    </LinearLayout>


</FrameLayout>