<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <com.budiyev.android.codescanner.CodeScannerView
        android:id="@+id/scanner_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:autoFocusButtonColor="@android:color/white"
        app:autoFocusButtonVisible="false"
        app:flashButtonColor="@android:color/white"
        app:flashButtonVisible="false"
        app:frameColor="#F6A129"
        app:frameCornersSize="35dp"
        app:frameCornersRadius="10dp"
        app:frameAspectRatioWidth="1"
        app:frameAspectRatioHeight="1"
        app:frameSize=".75"
        app:frameThickness="3dp"
        app:maskColor="#79000000"/>
    </RelativeLayout>
    <TextView
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scan QR Code"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="#ffffff"
        >
    </TextView>
    <com.airbnb.lottie.LottieAnimationView
        android:visibility="visible"
        android:id="@+id/animation_lottie"
        android:layout_width="800dp"
        android:layout_height="600dp"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
        app:lottie_rawRes="@raw/scan_animation"
        app:lottie_loop="true"
        app:lottie_autoPlay="true" />
    <ImageView
        android:id="@+id/flash_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ic_code_scanner_flash_on">
    </ImageView>

</RelativeLayout>