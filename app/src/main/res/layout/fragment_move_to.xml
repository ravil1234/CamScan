<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@color/cardview_light_background"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/move_to_prev"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:background="@drawable/other_page_number"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="5"
                android:padding="8dp"

                android:textColor="#fff"
                android:layout_gravity="center_horizontal"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Previous"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/move_to_curr"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:background="@drawable/curr_page_number"
                android:gravity="center"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:text="2"
                android:padding="12sp"

                android:textColor="#000"
                android:layout_gravity="center_horizontal"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/move_to_next"
                android:layout_width="wrap_content"
                android:layout_height="34dp"
                android:background="@drawable/other_page_number"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="6"
                android:padding="8dp"

                android:textColor="#fff"
                android:layout_gravity="center_horizontal"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Next"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                />
        </LinearLayout>

    </LinearLayout>
    <androidx.appcompat.widget.AppCompatSeekBar
        android:id="@+id/move_to_seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_marginTop="8dp"
        android:progress="50"

        android:background="@drawable/curr_page_number"
        style="@style/MySeekBarTheme"
        android:thumb="@drawable/custom_thumb"
        />
</LinearLayout>