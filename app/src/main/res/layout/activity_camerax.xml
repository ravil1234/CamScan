<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:visibility="visible"
        android:id="@+id/relative_layout_camerax"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:id="@+id/top_card_view"
        android:layout_width="match_parent"
        app:cardBackgroundColor="@color/colorAppBar"
        android:layout_height="@dimen/_45sdp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp">
            <ImageView
                android:id="@+id/flash_mode"
                android:foreground="@drawable/foreground_app_theme"
                android:layout_width="@dimen/_28sdp"
                android:layout_height="@dimen/_28sdp"
                android:layout_marginLeft="28dp"
                android:layout_centerVertical="true"
                android:src="@drawable/automatic_flash">
            </ImageView>
            <RelativeLayout
                android:foreground="@drawable/foreground_app_theme"
                android:id="@+id/show_hide_grid"
                android:layout_width="25dp"
                android:layout_centerInParent="true"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:background="@drawable/square_border">
                <View
                    android:layout_marginLeft="5dp"
                    android:layout_width="2dp"
                    android:layout_height="22dp"
                    android:layout_centerVertical="true"
                    android:background="#ffffff">
                </View>
                <View
                    android:layout_marginLeft="11dp"
                    android:layout_width="2dp"
                    android:layout_height="22dp"
                    android:layout_centerVertical="true"
                    android:background="#ffffff">
                </View>
                <View
                    android:layout_marginLeft="17dp"
                    android:layout_width="2dp"
                    android:layout_height="22dp"
                    android:layout_centerVertical="true"
                    android:background="#ffffff">
                </View>
                <View
                    android:layout_marginTop="5dp"
                    android:layout_width="22dp"
                    android:layout_height="2dp"
                    android:layout_centerHorizontal="true"
                    android:background="#ffffff">
                </View>
                <View
                    android:layout_marginTop="11dp"
                    android:layout_width="22dp"
                    android:layout_height="2dp"
                    android:layout_centerHorizontal="true"
                    android:background="#ffffff">
                </View>
                <View
                    android:layout_marginTop="17dp"
                    android:layout_width="22dp"
                    android:layout_height="2dp"
                    android:layout_centerHorizontal="true"
                    android:background="#ffffff">
                </View>
            </RelativeLayout>
            <ImageView
                android:id="@+id/scan_qr_code"
                android:foreground="@drawable/foreground_app_theme"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="28dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/scan">
            </ImageView>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.camera.view.PreviewView
        android:layout_marginTop="-5dp"
        android:id="@+id/previewView"
        android:layout_below="@id/top_card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_card_view">
        <ImageView
            android:visibility="gone"
            android:id="@+id/focus_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/focus">
        </ImageView>
    </androidx.camera.view.PreviewView>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/line_horizontal"
        android:layout_marginTop="-5dp"
        android:layout_below="@id/top_card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_above="@id/bottom_card_view"
        >
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#C3FFFFFF">
            </View>
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#C3FFFFFF">
            </View>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/line_vertical"
        android:layout_marginTop="-5dp"
        android:layout_below="@id/top_card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_above="@id/bottom_card_view"
        >
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="0dp">
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="0dp">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#C3FFFFFF">
            </View>
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="0dp">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#C3FFFFFF">
            </View>
        </RelativeLayout>
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_marginTop="-2dp"
        android:id="@+id/bottom_card_view"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        app:cardBackgroundColor="@color/colorAppBar"
        android:layout_height="120dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp">
            <View
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerInParent="true"
                android:background="@drawable/circular_white"
               >
            </View>
            <View
                android:foreground="@drawable/foreground_app_theme"
                android:id="@+id/captureImage"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_centerInParent="true"
                android:background="@drawable/circular_shape">
            </View>
            <ImageView
                android:id="@+id/gallery"
                android:foreground="@drawable/foreground_app_theme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:src="@drawable/gallery">
            </ImageView>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_centerVertical="true">
                <ImageView
                    android:visibility="gone"
                    android:id="@+id/last_img"
                    android:layout_width="50dp"
                    android:layout_height="70dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/test_img">
                </ImageView>
                <TextView
                    android:visibility="gone"
                    android:id="@+id/no_pages"
                    android:background="@drawable/rectangular_white_background"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:text="00"
                    android:textColor="#28a8e9"
                    android:fontFamily="@font/font_regular"
                    android:textSize="@dimen/_9sdp">
                </TextView>
            </RelativeLayout>
            <TextView
                android:id="@+id/tick_img"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Next"
                android:foreground="@drawable/foreground_app_theme"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:textSize="@dimen/_14sdp"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:textColor="@color/text_color1"
                android:fontFamily="@font/font_medium"
                android:background="@drawable/rectangular_border">
            </TextView>
            <ImageView
                android:id="@+id/batch_mode"
                android:layout_toLeftOf="@id/single_mode"
                android:foreground="@drawable/foreground_app_theme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/batch_mode">
            </ImageView>
            <View
                android:visibility="gone"
                android:id="@+id/batch_mode_true"
                android:layout_marginRight="26dp"
                android:layout_toLeftOf="@id/single_mode"
                android:layout_below="@id/single_mode"
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:background="@drawable/circular_blue">
            </View>
            <ImageView
                android:id="@+id/single_mode"
                android:foreground="@drawable/foreground_app_theme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:backgroundTint="#ffffff"
                android:src="@drawable/single">
            </ImageView>
            <View
                android:id="@+id/single_mode_true"
                android:layout_marginRight="34dp"
                android:layout_alignParentRight="true"
                android:layout_below="@id/single_mode"
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:background="@drawable/circular_blue">
            </View>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
</RelativeLayout>
