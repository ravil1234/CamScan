<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/image_pdf"
            android:layout_marginLeft="16dp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="#efefef">
        </ImageView>
        <TextView
            android:id="@+id/name_pdf"
            android:layout_toRightOf="@id/image_pdf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text=" New Folder 11201021"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="14sp">
        </TextView>
        <TextView
            android:id="@+id/date_pdf"
            android:layout_marginTop="5dp"
            android:layout_below="@id/name_pdf"
            android:layout_toRightOf="@id/image_pdf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text=" 15-10-2020"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="14sp">
        </TextView>
        <View
            android:layout_marginTop="15dp"
            android:layout_below="@id/image_pdf"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#707070"></View>
    </RelativeLayout>

</LinearLayout>