<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/filter_parent_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_corner_radius"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/cancel_btn"
            android:foreground="@drawable/foreground_app_theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:padding="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/cross_img">
        </ImageView>
        <TextView
            android:id="@+id/text_queries"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:textSize="@dimen/_14sdp"
            android:layout_marginTop="25dp"
            android:text="Filter"
            android:textColor="@color/colorAppBar"
            android:fontFamily="@font/font_bold"
            >
        </TextView>
        <TextView
            android:id="@+id/varients_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_10sdp"
            android:layout_marginLeft="16dp"
            android:layout_below="@id/text_queries"
            android:fontFamily="@font/font_regular"
            android:text="Select filter of your choice">
        </TextView>
        <View
            android:id="@+id/view1"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#f5f5f5"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:layout_below="@id/varients_type"
            android:layout_marginBottom="15dp">
        </View>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_filter"
            android:layout_below="@id/view1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:scrollbars="none">
        </androidx.recyclerview.widget.RecyclerView>
    </RelativeLayout>
</androidx.cardview.widget.CardView>