<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#ffffff"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/relative_layout_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">
        <RelativeLayout
            android:id="@+id/relative_layout_app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
            android:layout_marginTop="2dp"
            android:foreground="@drawable/foreground_circular_items"
            android:id="@+id/settings"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginLeft="16dp"
            android:src="@drawable/setup">
        </ImageView>
        <ImageView
            android:layout_marginTop="2dp"
            android:foreground="@drawable/foreground_circular_items"
            android:id="@+id/more_option"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:src="@drawable/more_option">
        </ImageView>
        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Files"
            android:textColor="#000000"
            android:textSize="@dimen/_18sdp"
            android:layout_centerInParent="true"
            android:textStyle="bold"
            android:fontFamily="@font/font_medium"
            >
        </TextView>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/relative_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:layout_below="@id/relative_layout_app_bar">
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:paddingTop="2dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:src="@drawable/search_img">
            </ImageView>
            <EditText
                android:id="@+id/edit_text_search"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:background="@drawable/edit_text_background"
                android:paddingLeft="44dp"
                android:hint="Search"
                android:textColorHint="#cad2bd"
                android:fontFamily="@font/font_regular"
                android:textColor="#000000"
                >
            </EditText>
            <ImageView
                android:visibility="gone"
                android:id="@+id/cross_button"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:padding="2dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:src="@drawable/cross_img">
            </ImageView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_below="@id/relative_layout"
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/relative_layout2"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="28dp"
                android:padding="10dp"
                android:background="@drawable/edit_text_background"
                >
                <ImageView
                    android:layout_toRightOf="@id/sort_by"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="10dp"
                    android:backgroundTint="@color/text_color1"
                    android:src="@drawable/drop_down">
                </ImageView>
                <TextView
                    android:id="@+id/sort_by"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textColorHint="#cad2bd"
                    android:fontFamily="@font/font_regular"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:text="Sort by date">
                </TextView>
            </RelativeLayout>
            <RelativeLayout
                android:visibility="gone"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@id/list_grid_view"
                android:background="@drawable/blue_circular_background">
                <ImageView
                    android:id="@+id/add_folder"
                    android:layout_width="24dp"
                    android:layout_centerInParent="true"
                    android:layout_height="24dp"
                    android:foreground="@drawable/foreground_circular_items"
                    android:src="@drawable/folder_add">
                </ImageView>
            </RelativeLayout>
            <ImageView
                android:id="@+id/list_grid_view"
                android:layout_marginRight="28dp"
                android:layout_alignParentRight="true"
                android:foreground="@drawable/foreground_circular_items"
                android:layout_centerVertical="true"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/list_view">
            </ImageView>
        </RelativeLayout>
    </RelativeLayout>
<RelativeLayout
    android:layout_below="@id/relative_layout_top"
    android:layout_marginTop="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
    </androidx.recyclerview.widget.RecyclerView>
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/no_result_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <ImageView
            android:id="@+id/no_result_found"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/empty_serach_logo">
        </ImageView>
        <TextView
            android:layout_below="@id/no_result_found"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Result Found"
            android:layout_centerHorizontal="true"
            android:textSize="@dimen/_18sdp"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/font_semibold">
        </TextView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="28dp">
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floating_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#59a4ff"
            android:src="@drawable/ic_camera_alt_black_24dp"
            android:onClick="gotoCamera"
            android:layout_marginBottom="28dp"
            />
    </RelativeLayout>
</RelativeLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:visibility="gone"
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_48sdp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorAppBar"
        app:labelVisibilityMode="labeled"
        android:backgroundTint="#00000000"
        app:itemIconSize="22dp"
        app:itemIconTint="@color/bottom_navigation_text_color"
        app:itemTextColor="@color/bottom_navigation_text_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/navigation_bar_homescreen"
        tools:layout_editor_absoluteX="-9dp"
        tools:targetApi="lollipop">
    </com.google.android.material.bottomnavigation.BottomNavigationView>
</RelativeLayout>