<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"

    >


    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">
            <ImageView
                android:id="@+id/fragment_filter_effects_5"
                android:layout_width="80dp"
                android:layout_height="80dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="B/w"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="#fff"
                android:background="#54000000"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginTop="50dp">
            <ImageView
                android:id="@+id/fragment_filter_effects_6"
                android:layout_width="80dp"
                android:layout_height="80dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Invert"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="#fff"
                android:background="#54000000"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            >
            <ImageView
                android:id="@+id/fragment_filter_effects_1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Original"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="#fff"
                android:background="#54000000"
                />
        </LinearLayout>

        <ImageView
            android:id="@+id/fragment_filter_effects_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/back"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp">
            <ImageView
                android:id="@+id/fragment_filter_effects_4"
                android:layout_width="80dp"
                android:layout_height="80dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Grayscale"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="#fff"
                android:background="#54000000"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            >
            <ImageView
                android:id="@+id/fragment_filter_effects_2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Luminous"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="#fff"
                android:background="#54000000"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            >
            <ImageView
                android:id="@+id/fragment_filter_effects_3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Correction"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="#fff"
                android:background="#54000000"
                />
        </LinearLayout>
    </LinearLayout>




</LinearLayout>